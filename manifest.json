{
  "manifest_version": 3,
  "name": "CI HQ - The No BS CI Tool",
  "version": "1.0.0",
  "description": "Extract competitor intelligence from any website with AI-powered analysis. No bullsh*t, just results.",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "contextMenus",
    "notifications",
    "tabs",
    "identity"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Extract Features"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["http://localhost:*/*", "https://*.vercel.app/*", "https://dashboard.getcihq.com/*"],
      "js": ["content-auth.js"]
    }
  ],
  "icons": {
    "16": "public/icon16.png",
    "48": "public/icon48.png",
    "128": "public/icon128.png"
  },
  "author": "CI HQ",
  "homepage_url": "https://dashboard.getcihq.com"
}